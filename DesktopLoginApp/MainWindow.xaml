<Window x:Class="DesktopLoginApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopLoginApp"
        mc:Ignorable="d"
        Title="StationCheck - Desktop Login" 
        Height="600" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#4A90E2">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Container -->
        <Border Background="White" 
                CornerRadius="20" 
                Margin="30"
                Padding="40"
                VerticalAlignment="Center">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Chào mừng trở lại!" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#333333"
                           Margin="0,0,0,40"/>

                <!-- Username -->
                <TextBlock Text="Tên đăng nhập" 
                           FontSize="14" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtUsername" 
                         Height="45" 
                         FontSize="16"
                         Padding="15,10"
                         BorderThickness="1"
                         BorderBrush="#CCCCCC"
                         Margin="0,0,0,20">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Password -->
                <TextBlock Text="Mật khẩu" 
                           FontSize="14" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="txtPassword" 
                             Height="45" 
                             FontSize="16"
                             Padding="15,10"
                             BorderThickness="1"
                             BorderBrush="#CCCCCC"
                             Margin="0,0,0,10">
                    <PasswordBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <!-- Remember Me -->
                <CheckBox x:Name="chkRememberMe" 
                          Content="Ghi nhớ đăng nhập" 
                          FontSize="14"
                          Foreground="#666666"
                          Margin="0,0,0,30"/>

                <!-- Login Button -->
                <Button x:Name="btnLogin" 
                        Content="Đăng nhập" 
                        Height="50" 
                        FontSize="18"
                        FontWeight="SemiBold"
                        Background="#4A90E2" 
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnLogin_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Status Message -->
                <TextBlock x:Name="txtStatus" 
                           Text="" 
                           FontSize="14" 
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,20,0,0"
                           Visibility="Collapsed"/>

                <!-- Device Status Panel -->
                <Border x:Name="pnlDeviceStatus"
                        Background="#F8F9FA"
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,20,0,0"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Trạng thái thiết bị" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#495057"
                                   Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Device: " 
                                       FontSize="13" 
                                       Foreground="#6C757D"/>
                            <TextBlock x:Name="txtDeviceName" 
                                       Text="" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#212529"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="MAC: " 
                                       FontSize="13" 
                                       Foreground="#6C757D"/>
                            <TextBlock x:Name="txtMacAddress" 
                                       Text="" 
                                       FontSize="13" 
                                       FontFamily="Consolas"
                                       Foreground="#212529"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Trạng thái: " 
                                       FontSize="13" 
                                       Foreground="#6C757D"/>
                            <TextBlock x:Name="txtDeviceStatusText" 
                                       Text="" 
                                       FontSize="13" 
                                       FontWeight="Bold"/>
                        </StackPanel>
                        
                        <Button x:Name="btnRefreshStatus" 
                                Content="🔄 Kiểm tra lại" 
                                Height="35" 
                                FontSize="13"
                                Background="#6C757D" 
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnRefreshStatus_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Loading Indicator -->
                <StackPanel x:Name="pnlLoading" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           Visibility="Collapsed">
                    <TextBlock Text="Đang đăng nhập..." 
                               FontSize="14" 
                               Foreground="#4A90E2"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
