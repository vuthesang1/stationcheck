    private async Task LoadStations()
    {
        isLoading = true;
        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            
            // Load all active stations
            stations = await context.Stations
                .Where(s => s.IsActive)
                .OrderBy(s => s.Name)
                .ToListAsync();

            // Load unresolved alert counts for each station
            var alertGroups = await context.MotionAlerts
                .Where(a => !a.IsResolved && a.StationId != null)
                .GroupBy(a => a.StationId)
                .Select(g => new { StationId = g.Key!.Value, Count = g.Count() })
                .ToListAsync();

            stationAlertCounts = alertGroups.ToDictionary(x => x.StationId, x => x.Count);
            
            // Load stations with active monitoring (enabled TimeFrames)
            var activeStationIds = await context.TimeFrames
                .Where(tf => tf.IsEnabled && tf.StationId != null)
                .Select(tf => tf.StationId!.Value)
                .Distinct()
                .ToListAsync();
            
