@using StationCheck.Models
@using StationCheck.Interfaces
@inject IMonitoringService MonitoringService

<div class="motion-stats-panel">
    <div class="panel-header">
        <h5><i class="bi bi-activity"></i> Motion Events Today</h5>
         <button class="btn btn-sm btn-primary" @onclick="LoadStats">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center p-3">
            <div class="spinner-border spinner-border-sm" role="status"></div>
        </div>
    }
    else
    {
        <div class="stats-grid">
            @foreach (var stat in stats)
            {
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-camera-video-fill"></i>
                    </div>
                    <div class="stat-details">
                        <div class="stat-label">@stat.Key</div>
                        <div class="stat-value">@stat.Value</div>
                        <div class="stat-subtext">motion events</div>
                    </div>
                </div>
            }
            
            @if (stats.Count == 0)
            {
                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle"></i> No motion events recorded today
                </div>
            }
        </div>

        <div class="recent-events mt-3">
            <h6>Recent Events</h6>
            @if (recentEvents.Count > 0)
            {
                <div class="events-list">
                    @foreach (var evt in recentEvents.Take(5))
                    {
                        <div class="event-item">
                            <i class="bi bi-dot"></i>
                            <span><strong>@evt.CameraName</strong></span>
                            <span class="text-muted">@evt.DetectedAt.ToString("HH:mm:ss")</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted small">No recent events</p>
            }
        </div>
    }
</div>

