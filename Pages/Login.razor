@page "/login"
@layout EmptyLayout
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Authorization
@using StationCheck.Services
@using StationCheck.Interfaces
@using StationCheck.Models
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider
@inject HttpClient HttpClient
@inject IAuthService AuthService

<div class="bg-gradient-primary" style="min-height: 100vh; padding: 20px 0;">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-3">
                    <div class="card-body p-0" style="max-height: 95vh; overflow-y: auto; overflow-x: hidden;">
                        <!-- Nested Row within Card Body -->
                        <div class="row g-0">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image" style="background: url('https://source.unsplash.com/K4mSJ7kc0As/600x800') center center; background-size: cover; min-height: 400px;"></div>
                            <div class="col-lg-6">
                                <div class="p-4">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Chào mừng trở lại!</h1>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <strong>Lỗi!</strong> @errorMessage
                                            <button type="button" class="close" @onclick="() => errorMessage = string.Empty">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    }
                                    
                                    <EditForm Model="@loginRequest" OnValidSubmit="@HandleLogin" class="user">
                                        <DataAnnotationsValidator />
                                        
                                        <div class="form-group">
                                            <InputText @bind-Value="loginRequest.Username" 
                                                       class="form-control form-control-user" 
                                                       placeholder="Tên đăng nhập" 
                                                       disabled="@isLoggingIn" />
                                            <ValidationMessage For="@(() => loginRequest.Username)" class="text-danger small" />
                                        </div>
                                        
                                        <div class="form-group">
                                            <InputText type="password" 
                                                       @bind-Value="loginRequest.Password" 
                                                       class="form-control form-control-user" 
                                                       placeholder="Mật khẩu" 
                                                       disabled="@isLoggingIn" />
                                            <ValidationMessage For="@(() => loginRequest.Password)" class="text-danger small" />
                                        </div>
                                        
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <InputCheckbox @bind-Value="loginRequest.RememberMe" 
                                                              class="custom-control-input" 
                                                              id="customCheck" 
                                                              disabled="@isLoggingIn" />
                                                <label class="custom-control-label" for="customCheck">Ghi nhớ đăng nhập</label>
                                            </div>
                                        </div>
                                        
                                        <button type="submit" 
                                                class="btn btn-primary btn-user btn-block" 
                                                disabled="@isLoggingIn">
                                            @if (isLoggingIn)
                                            {
                                                <span class="spinner-border spinner-border-sm mr-2" role="status" aria-hidden="true"></span>
                                                <span>Đang đăng nhập...</span>
                                            }
                                            else
                                            {
                                                <span>Đăng nhập</span>
                                            }
                                        </button>
                                    </EditForm>
                                    
                                    <hr>
                    
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <!-- Download Desktop Login App Section (Only for Employee) -->
                        <div class="alert alert-warning text-center mt-3" role="alert">
                            <i class="fas fa-exclamation-triangle mb-2" style="font-size: 1.5rem;"></i>
                            <h6 class="font-weight-bold mb-2">@successMessage</h6>
                            <p class="mb-3 small">
                                Nhân viên trạm phải sử dụng Desktop Login App để đăng nhập.
                            </p>
                            
                            <!-- Download button -->
                            <div class="mb-3">
                                <a href="/api/auth/download-desktop-login-app" 
                                   class="btn btn-primary btn-sm" 
                                   title="Tải Desktop Login App">
                                    <i class="fas fa-download"></i> Tải Desktop Login App
                                </a>
                            </div>
                            
                            <!-- Collapsible Installation instructions -->
                            <div class="accordion" id="installGuideAccordion">
                                <div class="card border-0">
                                    <div class="card-header p-0 bg-transparent border-0" id="headingGuide">
                                        <button class="btn btn-link btn-sm btn-block text-left text-primary collapsed" 
                                                type="button" 
                                                data-toggle="collapse" 
                                                data-target="#collapseGuide" 
                                                aria-expanded="false" 
                                                aria-controls="collapseGuide">
                                            <i class="fas fa-info-circle"></i> Hướng dẫn cài đặt 
                                            <i class="fas fa-chevron-down float-right mt-1"></i>
                                        </button>
                                    </div>
                                    <div id="collapseGuide" 
                                         class="collapse" 
                                         aria-labelledby="headingGuide" 
                                         data-parent="#installGuideAccordion">
                                        <div class="card-body p-2 bg-light rounded">
                                            <ol class="mb-0 pl-3 small text-left">
                                                <li>Tải file <strong>DesktopLoginApp.zip</strong></li>
                                                <li><strong>Giải nén</strong> file ZIP</li>
                                                <li>Chạy <strong>DesktopLoginApp.exe</strong></li>
                                                <li>Windows cảnh báo → click <strong>"More info"</strong> → <strong>"Run anyway"</strong></li>
                                                <li>Đăng nhập bằng tài khoản của bạn</li>
                                            </ol>
                                            <p class="mb-0 mt-2">
                                                <small class="text-muted">
                                                    <i class="fas fa-exclamation-circle"></i> 
                                                    Không xóa các file khác trong thư mục.
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }@* <div class="text-center">
                                        <small class="text-muted">
                                            <strong>Tài khoản mặc định:</strong><br/>
                                            Admin: <code>admin</code> / <code>Admin@123</code><br/>
                                            Manager: <code>manager</code> / <code>Manager@123</code><br/>
                                            Employee: <code>employee1</code> / <code>Employee@123</code>
                                        </small>
                                    </div> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

