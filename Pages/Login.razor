<script>
    window.loginWithFetch = async function(loginRequest) {
        try {
            const response = await fetch('/api/auth/web-login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(loginRequest),
                credentials: 'same-origin' // Important: Include cookies
            });
            
            const data = await response.json();
            
            return {
                success: response.ok && data.success,
                message: data.message,
                requiresDeviceRegistration: data.requiresDeviceRegistration || false
            };
        } catch (error) {
            return {
                success: false,
                message: 'Lỗi kết nối: ' + error.message,
                requiresDeviceRegistration: false
            };
        }
    };
</script>
    
@code {
    private LoginRequest loginRequest = new LoginRequest();
    private string errorMessage = "";
    private string successMessage = "";
    private bool isLoggingIn = false;
    
    protected override async Task OnInitializedAsync()
    {
        // Check if already authenticated via Cookie (for browser SSO)
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        // Check for logout message from device status monitor
        try
        {
            var logoutMessage = await JS.InvokeAsync<string?>("getLogoutMessage");
            if (!string.IsNullOrEmpty(logoutMessage))
            {
                errorMessage = logoutMessage;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Login] Error getting logout message: {ex.Message}");
        }
    }
    
    private async Task HandleLogin()
    {
        try
        {
            isLoggingIn = true;
            errorMessage = "";
            successMessage = "";
            
            // Use JavaScript fetch so browser handles cookies properly
            var result = await JS.InvokeAsync<LoginResult>("loginWithFetch", loginRequest);
            
            if (result.Success)
            {
                // Cookie is set by browser, force reload to activate authentication
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else if (result.RequiresDeviceRegistration)
            {
                successMessage = "Bạn cần đăng nhập qua Desktop Login App";
                errorMessage = "";
            }
            else
            {
                errorMessage = result.Message ?? "Đăng nhập thất bại. Vui lòng kiểm tra lại tên đăng nhập và mật khẩu.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi: {ex.Message}";
        }
        finally
        {
            isLoggingIn = false;
        }
    }
    
    private class LoginResult
    {
        public bool Success { get; set; }
        public string? Message { get; set; }
        public bool RequiresDeviceRegistration { get; set; }
    }
}
